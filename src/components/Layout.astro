---
import "../global.css";
import ContextualNavigation from "./ContextualNavigation.astro";
const { book, chapter, description, frontmatter, title } = Astro.props;
const renderTitle = title || frontmatter?.title;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{renderTitle ? `${renderTitle} | ` : ""}Shama</title>
    <meta
      name="description"
      content={description ||
        "A resource to find the most common word in each chapter of the Bible for better listening"}
    />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
  </head>
  <body>
    <main>
      <slot />
      <ContextualNavigation book={book} chapter={chapter} />
    </main>
  </body>
</html>
